html 
    head
        title Delete Item
        link(link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
    body 
        div(class="container")
            h2 Are you sure you want to delete #{item.item_name} ?
            form(action=`/item/${id}/delete` method="POST")
                button(type="submit" class="btn btn-success") Yes 
            a(href="/item")
                button(class="btn btn-success") No
