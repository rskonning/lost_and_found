html 
    head
        title Update Item
        link(link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
    body 
        div(class="container")
            form(action=`/item/${item.item_id}` method="POST")
                input(type="hidden" name="item_id" value=item.item_id)
                div(class="m-3")
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Item Name: 
                        div(class="col-8")
                            input(type="text" class="form-control" name="item_name" value=item.item_name maxlength="30" required)
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Category: 
                        div(class="col-8")
                            select(class="form-control" name="category")
                                option(value="valuable" selected=("valuable" == item.category)) Valuable 
                                option(value="clothing" selected=("clothing" == item.category)) Clothing 
                                option(value="electronic" selected=("electronic" == item.category)) Electronic 
                                option(value="keys" selected=("keys" == item.category)) Keys 
                                option(value="book" selected=("book" == item.category)) Book 
                                option(value="jewelry" selected=("jewelry" == item.category)) Jewelry 
                                option(value="bag/purse" selected=("bag/purse" == item.category)) Bag/Purse
                                option(value="wallet/id" selected=("wallet/id" == item.category)) Wallet/ID
                                option(value="other" selected=("other" == item.category)) Other
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Building: 
                        div(class="col-8")
                            input(type="text" class="form-control" name="building" value=item.building maxlength="30" required)
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Location Area: 
                        div(class="col-8")
                            input(type="text" class="form-control" name="location_area" value=item.location_area maxlength="30" required)
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Count: 
                        div(class="col-8")
                            select(class="form-control" name="count" value=item.count)
                                option(value=1) 1
                                option(value=2) 2
                                option(value=3) 3
                                option(value=4) 4
                                option(value=5) 5
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Item Value: 
                        div(class="col-8")
                            input(type="text" class="form-control" name="item_value" value=item.item_value required)
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Description: 
                        div(class="col-8")
                            textarea(class="form-control" rows="12" name="description") #{item.description}
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Person who found: 
                        div(class="col-8")
                            select(class="form-control" name="person_found" value=item.person_found)
                                for p in people 
                                    option(value=p.AU_ID selected=(p.AU_ID == item.person_found)) #{p.AU_ID} -  #{p.name}
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Date found: 
                        div(class="col-8")
                            input(type='datetime-local' name="date_found" value=item.date_found)
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Person who claimed: 
                        div(class="col-8")
                            select(class="form-control" name="person_claimed" value=item.person_claimed)
                                option(value=null selected=(null == item.person_claimed))
                                for p in people 
                                    option(value=p.AU_ID selected=(p.AU_ID == item.person_claimed)) #{p.AU_ID} -  #{p.name}
                    div(class="form-group row")
                        label(class="col-4 col-form-label") Date claimed: 
                        div(class="col-8")
                            input(type='datetime-local' name="date_claimed" value=item.date_claimed)
                    div
                        button(type="submit" class="btn btn-primary") Update Item