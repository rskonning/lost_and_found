html
    head 
        title Lost and Found 
        link(link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.js")
        script(src="/static/js/handleSearch.js")
    body 
        div(class="container")
            h1(class="text-center") AU Lost and Found
            div(class="text-right")
                a(href="/logout") Log Out
            table(class="table table-bordered table-hover bg-success text-light" id="table")
                thead 
                    tr 
                        th Item Name 
                        th Category
                        th Building 
                        th Location Area 
                        th Description 
                        th Count 
                        th Item Value 
                        th Item found by 
                        th Date Found 
                        th Item claimed by 
                        th Date Claimed 
                        th 
                        th
                tbody 
                    for i in item 
                        tr(id=i.item_id) 
                            td=i.item_name 
                            td=i.category
                            td=i.building
                            td=i.location_area 
                            td=i.description 
                            td=i.count 
                            td=i.item_value 
                            if i.person_found == null 
                                td 
                            else 
                                for p in people 
                                    if i.person_found == p.AU_ID 
                                        td=p.name
                            td=i.date_found 
                            if i.person_claimed == null || i.person_claimed == ""
                                td 
                            else 
                                for p in people 
                                    if i.person_claimed == p.AU_ID 
                                        td=p.name 
                            td=i.date_claimed
                            td 
                                form(action=`/item/${i.item_id}/delete` method="get")
                                    button(type="submit") Delete 
                            td 
                                form(action=`/item/${i.item_id}` method="get")
                                    button(type="submit") Update
            div(class="container" id="searchForm")
                h2() 
                    a(href='/item/create') Create Item
                h2(class="text-center") Search for Item
                table(class="table table-bordered")
                    thead 
                        tr 
                            th Item Name 
                            th Category 
                            th Building 
                            th Date Found 
                            th
                    tbody 
                        tr 
                            th 
                                input(id="item_name" type="text" maxlength="30")
                            th 
                                input(id="category" type="text" maxlength="20")
                            th 
                                input(id="building" type="text" maxlength="30")
                            th 
                                input(id="date_found" type="date")
                            th 
                                button(class="btn btn-success" onClick="search();") Search